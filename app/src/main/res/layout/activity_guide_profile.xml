<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#bc22bc"
    android:backgroundTint="#c726c7"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/guide_profile_image"
        android:src="@drawable/person2"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/guide_profile_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:layout_below="@+id/guide_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/guide_profile_status"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="Current User Status"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/guide_profile_displayName"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/guide_profile_sendRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="Send Friend Request"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:layout_above="@+id/guide_profile_declinereq"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/guide_profile_area"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="Area : Sylhet"
        android:layout_above="@+id/guide_profile_sendRequest"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/guide_profile_declinereq"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"

        android:text="Decline Request"
        android:layout_marginBottom="9dp"
        android:layout_above="@+id/guide_profile_hire"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/guide_profile_hire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:text="Hire Me"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
